<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyLinerLayout">
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
       <!-- <item name="android:background">@drawable/linerlayout_shape</item> -->
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MyEditView">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#08144e</item>
        <item name="android:text">adasd</item>
        <item name="android:gravity">left|center_vertical</item>

     <!--   <item name="android:background">@drawable/linerlayout_shape</item>
     -->
    </style>
    <style name="MyTVLabel">
       <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <!--
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

        <item name="android:background">@drawable/tv_label_shape</item>
          -->
        <!--
        <item name="android:background">@drawable/title_lbl</item>
        -->
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShapeNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#556699</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="HeaderLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
       <!-- <item name="android:background">@color/bg_header</item> -->
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="MyRatingBar">
        <item name="colorControlNormal">@android:color/holo_orange_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
</resources>