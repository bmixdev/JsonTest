<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:scrollbarDefaultDelayBeforeFade="500000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_face_black_1_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dlg_tv_input_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_f"
                    android:textSize="10dp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dlg_edit_polis_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_f" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_face_black_2_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dlg_tv_input_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_i"
                    android:textSize="10dp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dlg_edit_polis_i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_i" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_face_black_3_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/dlg_tv_input_o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_o"
                    android:textSize="10dp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dlg_edit_polis_o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_o" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_date_range_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dlg_tv_input_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_birthday"
                    android:textSize="10dp"
                    android:visibility="invisible" />
                <!--
                <TextView
                    android:id="@+id/dlg_edit_polis_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_birthday"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18dp"
                    android:background="@drawable/border_bottom"
                    />
                    -->
                <EditText
                    android:id="@+id/dlg_edit_polis_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_birthday"
                    android:textColor="@color/black"
                    android:textIsSelectable="false"
                    android:textSize="18dp"
                    android:background="@drawable/border_bottom"
                    android:inputType="date"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_assignment_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dlg_tv_input_polis_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_polis_num"
                    android:textSize="10dp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dlg_edit_polis_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_polis_num" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_local_post_office_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dlg_tv_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_email"
                    android:textSize="10dp"
                    android:visibility="invisible"
                    />

                <EditText
                    android:id="@+id/dlg_edit_polis_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_email" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/ic_local_phone_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dlg_tv_input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_phone"
                    android:textSize="10dp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/dlg_edit_polis_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_phone" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>