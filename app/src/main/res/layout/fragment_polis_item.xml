<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/default_color_card"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:background="@color/default_ligth_color"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPolisItemRefresh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bkg"
                android:contentDescription="@string/sync"
                android:padding="5dp"
                android:src="@drawable/if_download_1814077" />

            <ImageButton
                android:id="@+id/btnPolisItemEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bkg"
                android:contentDescription="@string/edit"
                android:padding="5dp"
                android:src="@drawable/if_pen_1814074" />

            <ImageButton
                android:id="@+id/btnPolisItemDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bkg"
                android:contentDescription="@string/delete"
                android:padding="5dp"
                android:src="@drawable/del_trash" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHeaderPolis"
            style="@style/HeaderLine"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemPolisDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llHeaderPolis1"
                    style="@style/HeaderLine">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:password="false"
                        android:text="Дата рождения"
                        android:textColor="@color/dark_grey"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemPolisBirthday"
                    style="@style/MyEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoText="false"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llHeaderPolis2"
                    style="@style/HeaderLine">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:password="false"
                        android:text="Номер полиса"
                        android:textColor="@color/dark_grey"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemPolisNum"
                    style="@style/MyEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoText="false"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llHeaderPolis3"
                    style="@style/HeaderLine">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:password="false"
                        android:text="Адрес электронной почты"
                        android:textColor="@color/dark_grey"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemPolisEmail"
                    style="@style/MyEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoText="false"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btnPolisItemViewCurLPU" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@drawable/bkg_btn_normal"
                    android:text="123" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvItemPolisDbg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <!-- <pl.openrnd.multilevellistview.MultiLevelListView
             android:id="@+id/listViewLPUtoPolis"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             App:alwaysExtended="false"
             App:nestType="multiple" />
         -->
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>